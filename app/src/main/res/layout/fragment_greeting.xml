<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/BackgroundColor"
    tools:context="com.deutschlernen.deutschlernenzuzammen.fragments.GreetingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greetingTxt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/greetingsTxt"
            android:background="?attr/HeaderColor"
            android:textColor="?attr/HeaderTextColor"
            android:textSize="30dp" />

        <TableLayout
            android:id="@+id/greetingsTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:stretchColumns="*">

            <TableRow
                android:elevation="10dp"
                android:translationZ="20dp"
                android:stateListAnimator="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/germanTxt"
                    android:gravity="center"
                    android:background="@drawable/grid_background"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="?attr/TableTextColor"
                    android:height="90dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/englishTxt"
                    android:gravity="center"
                    android:height="90dp"
                    android:background="@drawable/grid_background"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="?attr/TableTextColor"
                    />
            </TableRow>
        </TableLayout>


    </LinearLayout>


</ScrollView>